
public class Warmup1 {
		
		
		
	public static void main(String[] args) {
		System.out.println(diff21(3));
	}
	
	public static boolean sleepIn(boolean weekday, boolean vacation) {
			  if (!weekday || vacation){
			  return true;
			  }
			 return false;
			}
	public static int diff21(int n) {
		  if (n <= 21) {
		    return 21 - n;
		  } else {
		    return (n - 21) * 2;
		  }
		}
	
	}

